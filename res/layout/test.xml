<RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_default"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="40dp"
  			android:background="@drawable/title_bar"
  			android:id="@+id/title" 
  			 > 

           <Button
               android:id="@+id/btnback"
               android:layout_width="70dp"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true" 
               android:layout_marginLeft="5dp"
               android:layout_centerVertical="true"
               android:text="返回"
               android:textColor="@android:color/black"
               android:textSize="16sp" 
               android:background="@drawable/title_btn_back"/>

           <Button 
                android:id="@+id/btndone"
			    android:layout_width="70dp" 
        		android:layout_height="wrap_content"
        		android:layout_alignParentRight="true" 
        		android:layout_centerVertical="true"
        		android:layout_marginRight="5dp"
        		android:text="保存"
        		android:textColor="@android:color/black"
        		android:textSize="16sp"
				android:background="@drawable/title_btn_right"
			    />    
			    
           <TextView
               android:id="@+id/matetex"
		    	android:text="NEW MATE"
		    	android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"	
				android:textSize="20sp"
				android:textColor="#000000"
				android:textStyle="bold"
				android:gravity="center"/>  				          

   </RelativeLayout>
   
    
   <ScrollView 
     android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_below="@+id/title"
     android:paddingLeft="5dp"
     android:paddingRight="5dp"
     android:paddingTop="5dp"
     android:paddingBottom="5dp"
     android:id="@+id/main_contain">
    
    <RelativeLayout 
            android:id="@+id/relayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_list_bg2"
            >
		    <FrameLayout
		        android:id="@+id/frame" 
		        android:layout_marginTop="5dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical">
		        		   		        
		        <ImageView       
				android:scaleType="center" 
				android:adjustViewBounds="true"               
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
        		android:id="@+id/imageView"
        		android:layout_width="fill_parent"
        		android:layout_height="fill_parent"       		
        	/>
		        <ImageView
		            android:layout_marginRight="10dp"
		            android:layout_marginLeft="10dp"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:id="@+id/imageframe"
		            />
		        
		        
		    </FrameLayout>
            
            <LinearLayout android:focusable="true"
      android:focusableInTouchMode="true" android:layout_width="0px"
      android:layout_height="0px" />
           
     <RelativeLayout 
         android:layout_below="@id/frame"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         >   
            
  	<FrameLayout
        	android:id="@+id/lilayout1"
        	
        	android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:hint="姓名"
                android:textSize="17sp"
                android:singleLine="true"
                android:textColor="@color/red"
                android:background="@drawable/mate_bar"
                android:id="@+id/editname"
                android:visibility="invisible"
                android:textStyle="bold"/>
        <Button 
            	android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="17sp"
                android:textColor="@color/red"
                android:background="@drawable/mate_bar"
                android:id="@+id/btnname"
                android:textStyle="bold"/>

    </FrameLayout>

    <FrameLayout
            android:id="@+id/lilayout2"
            android:layout_below="@id/lilayout1"
        	android:layout_marginTop="14dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

      

        <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/editphone"
                android:inputType="phone"
                android:hint="电话"
                android:singleLine="true"
                android:visibility="invisible"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:background="@drawable/mate_bar"/>
        
        <Button 
            	android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="17sp"
                android:background="@drawable/mate_bar"
                android:textColor="@color/red"
                android:id="@+id/btnphone"
                android:textStyle="bold"/>

        
    </FrameLayout>

    <FrameLayout
       		android:id="@+id/lilayout3"
       		android:layout_below="@id/lilayout2"
        	android:layout_marginTop="14dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


        <EditText
             	android:id="@+id/editqq"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:hint="QQ"
                android:singleLine="true"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:visibility="invisible"
                android:background="@drawable/mate_bar"/>
        <Button 
            	android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="17sp"
                android:background="@drawable/mate_bar"
                android:id="@+id/btnqq"
                android:textColor="@color/red"
                android:textStyle="bold"/>

        
    </FrameLayout>

    <FrameLayout
        	android:id="@+id/lilayout4"	
        	android:layout_below="@id/lilayout3"
        	android:layout_marginTop="14dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        

        <EditText
            	android:id="@+id/editemail"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/mate_bar"
                android:hint="邮箱"
                android:textColor="@color/red"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:visibility="invisible"
                android:textSize="17sp"
                android:textStyle="bold"
                />
        <Button 
            	android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="17sp"
                android:background="@drawable/mate_bar"
                android:id="@+id/btnemail"
                android:textColor="@color/red"
                android:textStyle="bold"/>
        

    		</FrameLayout>
    	</RelativeLayout> 
    </RelativeLayout>
    
     
    </ScrollView>
    

   
</RelativeLayout>
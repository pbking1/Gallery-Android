<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_default" 
    >
    
    <RelativeLayout
    android:id="@+id/relayout"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:background="@drawable/title_bar"
     >
  
    <TextView
    	android:text="HOME"
    	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"	
		android:textSize="20sp"
		android:textColor="#000000"
		android:textStyle="bold"
		android:gravity="center"/>  
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >
        
        <com.example.gallery.MyImageView
            android:id="@+id/newbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:scaleType="matrix"
            android:src="@drawable/jiluqingchun" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.example.gallery.MyImageView
                    android:id="@+id/existbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:scaleType="matrix"
                    android:src="@drawable/qingchunhenji" />

                <com.example.gallery.MyImageView
                    android:id="@+id/morebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:scaleType="matrix"
                    android:src="@drawable/chakangengduo" />
            </LinearLayout>

            <com.example.gallery.MyImageView
                android:id="@+id/funbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:scaleType="matrix"            
                android:src="@drawable/qingchunyizhan" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>